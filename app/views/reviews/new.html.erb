<div class="container">
  <h1>Add a new review</h1>


  <%= form_for([@restaurant, @review]) do |f| %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :rating %><br>
      <%= f.select :rating, [ 1, 2, 3, 4, 5 ], :prompt => 'Select One' %>
    </div>

    <%= f.submit class: 'btn btn-info' %>
  <% end %>
</div>
